
<div class="card" style="width: 18rem;">
 
  <div class="card-body">
    <h2 class="card-title"><%= @friend.first_name %>
    <%= @friend.last_name %>
    </h2>
    <p class="card-text"> <b>Email:</b> <%= @friend.email %> </p> <p class="card-text"> <b>Phone:</b> <%= @friend.phone %> </p>
    <p class="card-text"> <b>Instagram:</b> <%= @friend.instagram %> </p>
    <br/>
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> |
    <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
  </div>
</div>






